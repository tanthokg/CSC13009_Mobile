<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="20sp"
        android:padding="20dp"
        android:id="@+id/txtSetting"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sTrashMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSetting"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Move to trash when delete"
        android:textSize="18sp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/sDarkMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sTrashMode"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Dark Mode"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/relChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sDarkMode"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/changeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Change time lapse slideshow "
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/timeSlideshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changeTime"
            android:text="After 2 seconds"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/settingDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="?attr/colorOnSecondary"
        android:layout_below="@id/relChange"/>

    <LinearLayout
        android:id="@+id/txtAppInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.2.0"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed by Group03"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>